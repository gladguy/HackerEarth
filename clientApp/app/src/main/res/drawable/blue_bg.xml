<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00CCFF" />
            <stroke
                android:width="1dp"
                android:color="#B3F0FF" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00CCFF"
                android:endColor="#E6FAFF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B3F0FF" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>