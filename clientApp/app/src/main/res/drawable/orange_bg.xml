<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FFDFB3" />
            <stroke
                android:width="1dp"
                android:color="#F7940A" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFC400"
                android:endColor="#F5E3B0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFD3B3" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>